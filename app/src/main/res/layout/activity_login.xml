<?xml version="1.0" encoding="utf-8"?>
<me.dreamheart.autoscalinglayout.ASRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white_color"
    custom:autoScaleEnable="true"
    custom:autoScaleType="fitHight"
    custom:designHeight="566.0dip"
    custom:designWidth="360.0dip">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="32.0dip"
        android:paddingTop="48.0dip"
        android:paddingRight="32.0dip">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="56.0dip"
            android:layout_gravity="center"
            android:src="@drawable/ic_yzlogo" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="18.0dip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="找赞助，上云赞校园"
            android:textAlignment="center"
            android:textColor="@color/third_text"
            android:textSize="15.0sp" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="30.0dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/login_mobilephone_et"
                android:layout_width="200.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:hint="输入11位手机号"
                android:inputType="number"
                android:maxLength="11"
                android:singleLine="true"
                android:textSize="15.0sp"
                custom:met_baseColor="@color/primary"
                custom:met_floatingLabel="normal"
                custom:met_floatingLabelAlwaysShown="true"
                custom:met_floatingLabelPadding="10.0dip"
                custom:met_floatingLabelText="手机号码"
                custom:met_textColor="@color/primary_text"
                custom:met_textColorHint="@color/third_text" />

            <Button
                android:id="@+id/login_send_smscode_bt"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="56.0dip"
                android:layout_gravity="start"
                android:text="获取验证码"
                android:textColor="@color/primary"
                android:textSize="15.0sp"
                android:theme="@style/Theme.AppCompat.Light" />
        </LinearLayout>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="32.0dip" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/login_smscode_et"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="输入6位数字验证码"
            android:inputType="number"
            android:maxLength="6"
            android:singleLine="true"
            android:textSize="15.0sp"
            custom:met_baseColor="@color/primary"
            custom:met_floatingLabel="normal"
            custom:met_floatingLabelAlwaysShown="true"
            custom:met_floatingLabelPadding="10.0dip"
            custom:met_floatingLabelText="短信验证码"
            custom:met_textColor="@color/primary_text"
            custom:met_textColorHint="@color/third_text" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="48.0dip" />


        <!--<com.dd.CircularProgressButton-->
            <!--android:id="@+id/login_login_cpb"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="46dp"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:background="@color/primary"-->
            <!--android:gravity="center"-->
            <!--android:text="立即登录"-->
            <!--android:textColor="#ffffffff"-->
            <!--android:textSize="16sp"-->
            <!--app:cpb_cornerRadius="10dp"-->
            <!--app:cpb_textProgress="0"-->
            <!--app:cpb_colorIndicator="@color/primary"-->
            <!--app:cpb_colorIndicatorBackground="#ff888888"-->
            <!--app:cpb_colorProgress="@color/white_color"-->
            <!--app:cpb_selectorComplete="@drawable/circle_progress_complete"-->
            <!--app:cpb_selectorError="@drawable/circle_progress_error"-->
            <!--app:cpb_selectorIdle="@drawable/circle_progress_blue_idle"-->
            <!--app:cpb_textComplete="欢迎回来"-->
            <!--app:cpb_textError="登录出现错误"-->
            <!--app:cpb_textIdle="立即登录"/>-->
        <TextView
            android:id="@+id/login_login_cpb"
            android:layout_width="fill_parent"
            android:layout_height="46dp"
            android:layout_centerHorizontal="true"
            android:background="@color/primary"
            android:gravity="center"
            android:text="立即登录"
            android:textColor="#ffffffff"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/login_service_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="42.0dip"
            android:text="收不到短信？ 联系客服"
            android:textAlignment="center"
            android:textColor="@color/third_text"
            android:textSize="13.0sp" />

        <TextView
            android:id="@+id/login_user_aggrement_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36.0dip"
            android:text="登录则默认您已同意 《云赞校园使用协议》"
            android:textAlignment="center"
            android:textColor="@color/third_text"
            android:textSize="13.0sp" />
    </LinearLayout>
</me.dreamheart.autoscalinglayout.ASRelativeLayout>